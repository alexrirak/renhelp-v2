<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: 'en' }}">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% if page.header.title %}{{ page.header.title }} - {% endif %}{{ site.title }}</title>
    {% do assets.addCss('theme://css/theme.css') %}
    {{ assets.css()|raw }}
    {{ assets.js()|raw }}
</head>
<body>
<div class="ren-container">
    {% include 'partials/header.html.twig' %}
    {% if theme_config.settings.show_breadcrumbs %}
        {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}

    <main id="content">
        {% block content %}{% endblock %}
    </main>

    {% include 'partials/footer.html.twig' %}
</div>
</body>
</html>