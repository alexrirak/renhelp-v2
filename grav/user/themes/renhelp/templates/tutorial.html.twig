{% extends 'base.html.twig' %}

{% block content %}

    {% set h = page.header %}

    {% if h.author or h.skill or h.type %}
        <div class="tutorial-meta">
            <table>
                {% if h.author %}
                    <tr>
                        <th>Author:</th>
                        <td>{{ h.author }}</td>
                    </tr>
                {% endif %}

                {% if h.skill %}
                    <tr>
                        <th>Skill Level:</th>
                        <td>
                            <div class="skill-stars">
                                {% for i in 1..5 %}
                                    {% if i <= h.skill %}
                                        <span class="star filled">★</span>
                                    {% else %}
                                        <span class="star">★</span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </td>
                    </tr>
                {% endif %}

                {% if h.type %}
                    <tr>
                        <th>Type:</th>
                        <td>
                            {% for type in h.type %}
                                <span class="tool-tag">{{ type }}</span>
                            {% endfor %}
                        </td>
                    </tr>
                {% endif %}

                {% if h.forum_url %}
                    <tr>
                        <th>Discussion:</th>
                        <td><a href="{{ h.forum_url }}">MPF Forums</a></td>
                    </tr>
                {% endif %}
            </table>
        </div>
    {% endif %}


    <article class="page">
        <h1>{{ page.title }}</h1>

        {# Render page content (markdown) #}
        <div class="page-content">
            {{ page.content | raw}}
        </div>

    </article>
{% endblock %}
